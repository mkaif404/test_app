<body>

<h1>Showing Article details here</h1>
<p><strong>Title:</strong><%= @article.title %></p>
<p><strong>Description:</strong><%= @article.description %></p>

<%= link_to "Edit",edit_article_path(@article),data: { confirm:"Are you sure?" } %> |
<%= link_to "Return to articles listing", articles_path %> |
<%= link_to 'Delete', article_path(@article), method: :delete, onclick: "return confirm('Are you sure you want to delete this article?');"  %>
</body>
</html>
